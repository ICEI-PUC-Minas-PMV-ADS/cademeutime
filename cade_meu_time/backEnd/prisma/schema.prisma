// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  email String @unique
  senha String
}

model Esporte {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  modalidade String
  qtdPessoas Int
  local String
}

model Evento {
id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  data DateTime
  horario DateTime
  local String
  tipoEsporte String
}
