// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  email String @unique
  senha String
  eventosPorUsuario Evento[]
}

model Esporte {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  modalidade String
  qtdPessoas Int
  local String
  eventosPorEsporte Evento[] 
}

model Evento {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  modalidade   Esporte   @relation(fields: [esporteId], references: [id])
  esporteId String @db.ObjectId 
  nome String
  data DateTime
  horario DateTime
  local String
  autorEvento Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String @db.ObjectId 
}

