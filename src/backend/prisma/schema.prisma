generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://rs1:27017,rs2:27018,rs3:27019/cademeutime?replicaSet=replica-set"
}

model Usuario {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  email String @unique
  senha String
}

model Esporte {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  icone String
  eventos Evento[]
}

model Evento {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  esporte   Esporte?   @relation(fields: [esporteId], references: [id])
  esporteId  String  @db.ObjectId
  nome String
  local String
  data DateTime
  latlng String  
}

